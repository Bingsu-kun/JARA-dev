<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Widget.MaterialComponents.MaterialCalendar.Fullscreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/jara_logo">

        </ImageView>

    </LinearLayout>


    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/flipper">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/boss_amp"
                android:layout_width="wrap_content"
                android:layout_height="350dp"
                android:layout_weight="1"
                android:src="@drawable/amp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/boss_amp_name"
                    android:text="  이웃집 앰프"
                    android:textColor="#ffffff"
                    android:textSize="25dp">
                </TextView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_star_24">
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/boss_amp_fairyforce"
                    android:text="10"
                    android:textColor="#ffffff"
                    android:textSize="25dp">
                </TextView>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/boss_amp_text"
                android:layout_margin="5dp"
                android:textAlignment="center"
                android:text=" 단잠을 방해하는 소리가 실체화된 몬스터.\n피아노, 일렉기타, 드럼 등 여러가지 소리를 낸다."
                android:textColor="#ffffff"
                android:textSize="20dp">
            </TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/boss_mosquito"
                android:layout_width="wrap_content"
                android:layout_height="350dp"
                android:layout_weight="1"
                android:src="@drawable/boss_mosquito" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/boss_mosquito_name"
                    android:text="  블루 스크린 모니터"
                    android:textColor="#ffffff"
                    android:textSize="25dp">
                </TextView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_star_24">
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/boss_mosquito_fairyforce"
                    android:text="10"
                    android:textColor="#ffffff"
                    android:textSize="25dp">
                </TextView>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/boss_mosquito_text"
                android:textAlignment="center"
                android:text="여름철을 대표하는 방해꾼.\n어딘가에선 주인공으로 받들어 물리치기도 한다."
                android:textColor="#ffffff"
                android:textSize="20dp">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/boss_monitor"
                android:layout_width="wrap_content"
                android:layout_height="350dp"
                android:layout_weight="1"
                android:src="@drawable/boss_mosquito" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/boss_monitor_name"
                    android:text="  블루 스크린 모니터"
                    android:textColor="#ffffff"
                    android:textSize="25dp">
                </TextView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_star_24">
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/boss_monitor_fairyforce"
                    android:text="10"
                    android:textColor="#ffffff"
                    android:textSize="25dp">
                </TextView>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/boss_monitor_text"
                android:textAlignment="center"
                android:text="보면 볼수록 빠져드는 몬스터.\n강하진 않지만 한번 빠져들면 헤어나오기 어렵다."
                android:textColor="#ffffff"
                android:textSize="20dp">
            </TextView>

        </LinearLayout>


    </ViewFlipper>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom"
            >

            <Button
                android:id="@+id/start_timeset"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="취침 시간"
                android:background="#000000"
                android:textColor="#ffffff">
            </Button>

            <Button
                android:id="@+id/finish_timeset"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="기상 시간"
                android:background="#000000"
                android:textColor="#ffffff">

            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/ibtn_prev"
                android:src="@drawable/ic_baseline_keyboard_arrow_left_24">
            </ImageButton>

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/ibtn_select"
                android:src="@drawable/ic_baseline_check_24">
            </ImageButton>

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/ibtn_next"
                android:src="@drawable/ic_baseline_keyboard_arrow_right_24">
            </ImageButton>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

