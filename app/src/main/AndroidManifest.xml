<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jara_dreamfairy">

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature android:name="android.hardware.type.watch" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="true" />

        <activity android:name=".Social_Activity"/>
        <activity android:name=".Time_Running_Activity"/>
        <activity android:name=".Setting_Activity" />
        <activity android:name=".Achiev_Activity" />
        <activity android:name=".select_boss_activity"/>
        <activity android:name=".MainActivity" />
        <activity android:name=".Marketplace_Activity" />
        <activity android:name=".Character_equipment_Activity" />
        <activity android:name=".Login_Activity" />
        <activity android:name=".Start_Activity" />
        <activity android:name=".Signup_Activity" />
        <activity android:name=".Character_selection_Activity" />
        <receiver android:name=".ScreenReceiver"></receiver>
        <service android:name=".ScreenService"></service>
        <activity android:name=".Splash_activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>